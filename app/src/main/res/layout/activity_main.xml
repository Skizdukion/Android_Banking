<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#FFF7EA"
        >
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/sologan"
            app:layout_constraintTop_toBottomOf="@+id/imageBackground" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="108dp" android:textSize="18sp"
            android:fontFamily="@font/anton" android:gravity="center|center_horizontal|center_vertical"
            android:textColor="#7B4949" app:layout_constraintHorizontal_bias="1.0" android:text="Mobile banking app"
            android:layout_marginLeft="175dp" android:layout_marginStart="175dp" android:textColorHint="#000000"
            android:textStyle="italic"/>
    <View
            android:layout_width="409dp"
            android:layout_height="326dp" android:id="@+id/imageBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            android:transitionName="image"
            app:layout_constraintEnd_toEndOf="parent" android:background="@drawable/crayon"/>
    <TextView
            android:text="WANKER BANKING"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/logo"
            android:transitionName="text"
            app:layout_constraintTop_toBottomOf="@+id/imageBackground" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp" android:textSize="50sp"
            android:fontFamily="@font/bangers" android:gravity="center|center_horizontal|center_vertical"
            android:textColor="#FF551F" android:textStyle="normal|italic"/>
</androidx.constraintlayout.widget.ConstraintLayout>