<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Register"
        android:background="#E8E8E3"
        android:orientation="vertical">
    <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:transitionName="image"
            android:src="@drawable/welcome_icon"/>
    <TextView
            android:id="@+id/Header"
            android:transitionName="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Welcome to
                            our service!"
            android:textSize="30sp"
            android:textColor="#000"
            android:fontFamily="@font/bungee"/>
    <TextView
            android:id="@+id/sologan"
            android:transitionName="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Please provide below information"
            android:textSize="18sp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_margin="20dp"
            android:orientation="vertical"
    >

        <com.google.android.material.textfield.TextInputLayout
                android:transitionName="input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" app:boxStrokeColor="#000000"
                android:hint="Full name" android:textColorHint="#000000">

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:transitionName="input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" app:boxStrokeColor="#000000"
                android:hint="Phone number" android:textColorHint="#000000"
                >

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:ems="10"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:transitionName="input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" app:boxStrokeColor="#000000"
                android:hint="Email" android:textColorHint="#000000">

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:transitionName="input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" app:boxStrokeColor="#000000"
                android:hint="Address" android:textColorHint="#000000">

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPostalAddress"
                    android:ems="10"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:transitionName="input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/identityCard"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" app:boxStrokeColor="#000000"
                android:hint="Identity card ID" android:textColorHint="#000000">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="9"
                    android:ems="10"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
                android:transitionName="button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:text="Confirm"
                android:layout_gravity="right"
                android:elevation="0dp"
                android:textColor="#fff"
                android:textSize="20sp"
                android:fontFamily="@font/anton"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" android:id="@+id/confirm"/>
        <Button
                android:transitionName="button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:text="Already have card? Sign in"
                android:layout_gravity="center"
                android:elevation="0dp"
                android:layout_margin="5dp" android:id="@+id/backLogin"/>
    </LinearLayout>


</LinearLayout>